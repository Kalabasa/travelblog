---
import { Image } from 'astro:assets';

const { imgSrc, alt } = Astro.props;
---

<div class="photo">
  <Image class="img" src={imgSrc} alt={alt} width="400" height="400" />
</div>

<style>
  .photo {
    background: #eee;
  }

  .img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
  }
</style>