---
export interface Props {
  url: string;
}

const { url } = Astro.props;
---

<article class="baseGridLayout layout">
  <h2 class="heading">
    <a class="headingLink" href={url}>Japan, March 2023</a>
  </h2>
  <p class="description">
    <slot name="description" />
  </p>
  <div class="gallery">
    <slot name="gallery" />
  </div>
</article>

<style>
  .layout {
    margin-top: 48px;
    margin-bottom: 48px;
  }

  .heading {
    grid-column: start / end;
    font-size: var(--large-font-size);
    text-align: center;
    margin: 0 0 48px;
  }

  .headingLink {
    text-decoration: none;
  }

  .description {
    grid-column: col 3 / 2 col span;
    text-align: center;
    text-wrap: pretty;
    line-height: var(--paragraph-line-height);
  }

  .gallery {
    grid-column: col 7 / end;
    display: grid;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    grid-auto-rows: 40px;
    grid-auto-flow: dense;
    gap: var(--grid-col-gap);
  }

  @media (max-width: 1200px) {
    .description {
      grid-column: start / to-col 3;
      margin: 0 0 48px;
    }
    .gallery {
      grid-column: col 4 / end;
    }
  }

  @media (max-width: 800px) {
    .description {
      grid-column: start / end;
      margin: 0 0 48px;
    }
    .gallery {
      grid-column: start / end;
    }
  }
</style>
